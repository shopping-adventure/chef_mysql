<% if ( node['mysql']['server']['type'] =~ /percona/ ) %>
	<% type='percona-server'%>
<%else%>
	<%type='mysql'%>
<%end%>

<%= node['mysql']['server']['packages'].first %>       <%= type %>-server/root_password      select <%= node['mysql']['server_root_password'] %>
<%= node['mysql']['server']['packages'].first %>         <%= type %>-server/root_password_again        select <%= node['mysql']['server_root_password'] %>
<%= node['mysql']['server']['packages'].first %>         <%= type %>-server/error_setting_password     boolean false
<%= node['mysql']['server']['packages'].first %>         <%= type %>-server/password_mismatch  boolean false
<%= node['mysql']['server']['packages'].first %>         <%= type %>-server/no_upgrade_when_using_ndb	boolean false
<%= node['mysql']['server']['packages'].first %>         <%= node['mysql']['server']['preseed'] %>/really_downgrade       boolean false
<%= node['mysql']['server']['packages'].first %>        <%= node['mysql']['server']['preseed'] %>/start_on_boot  boolean true
<%= node['mysql']['server']['packages'].first %>         <%= node['mysql']['server']['preseed'] %>/nis_warning    note
<%= node['mysql']['server']['packages'].first %>         <%= node['mysql']['server']['preseed'] %>/postrm_remove_databases        boolean false
